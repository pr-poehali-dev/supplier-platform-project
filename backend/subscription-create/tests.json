{
  "tests": [
    {
      "name": "Create subscription - invalid JWT token",
      "method": "POST",
      "path": "/",
      "body": {
        "plan_id": 1,
        "user_email": "test@example.com",
        "return_url": "https://example.com/success"
      },
      "headers": {
        "X-Authorization": "Bearer invalid_token"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid token"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create subscription - unauthorized",
      "method": "POST",
      "path": "/",
      "body": {
        "plan_id": 1,
        "user_email": "test@example.com",
        "return_url": "https://example.com/success"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Unauthorized"
      },
      "bodyMatcher": "partial"
    }
  ]
}